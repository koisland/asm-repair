rule stringdecomposer:
    input:
        # chr21
        monomers="data/monomers/chm13_{chr}_monomers.fa",
        # HG03710_tig00000001
        fa="data/hprc/sequence/{contig}.fa",
    output:
        "",
    conda:
        "../env/stringdecomposer.yaml"
    benchmark:
        "benchmarks/stringdecomposer.tsv"
    log:
        "logs/stringdecomposer.log",
    shell:
        """
        stringdecomposer \
        {input.fa} \
        {input.monomers} \
        --outfile {output} 2> {log}
        """


